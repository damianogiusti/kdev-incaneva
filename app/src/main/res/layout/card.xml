<?xml version="1.0" encoding="utf-8"?><!-- layout di ogni cardview -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="Prova"
                android:gravity="bottom"
                android:textColor="#000"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/postImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:shadowColor="@android:color/background_dark"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:text="asdasdasd"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:textSize="25dp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/postImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/calendar"
                android:padding="12dp"
                android:layout_marginLeft="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="GIO"
                        android:id="@+id/day"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="00"
                        android:id="@+id/daynumber"
                        android:layout_weight="1"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="MESEDELLANNO"
                    android:id="@+id/event_month"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ORE 00:00"
                    android:id="@+id/event_hour"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="#ffffff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/postImage"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="true"
                android:layout_toEndOf="@+id/calendar"
                android:layout_toRightOf="@+id/calendar"
                android:id="@+id/info">

                <!--<TextView-->
                <!--android:id="@+id/blogName"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:text="Johnny Bravo"-->
                <!--android:textSize="30sp" />-->

                <TextView
                    android:id="@+id/blogName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Il più fico della città"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/postContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Il più fico della città"
                    android:textSize="12dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnMoreInfo"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Più informazioni"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/info"
                android:layout_margin="0dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>